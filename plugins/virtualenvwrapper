:
# uses VENV as name of virtual environment

[ -z "$VENV" ] && return 0
command -v workon >/dev/null || return 0

case ${_wshook__op} in
    create)
        mkvirtualenv $VENV
        ;;
    destroy)
        rmvirtualenv $VENV
        ;;
    enter)
        workon $VENV
        ;;
    leave)
        deactivate
        ;;
esac
