# uses VENV as name of virtual environment
# uses VENV_shared - non-empty (true) or empty (false)

if [ -n "$VENV" ] && command -v workon >/dev/null; then
    case ${wshook__op} in
        create)
            mkvirtualenv $VENV
            ;;
        destroy)
            if [ -z "$VENV_shared" ]; then
                rmvirtualenv $VENV
            fi
            ;;
        enter)
            workon $VENV
            ;;
        leave)
            deactivate
            ;;
    esac
fi
